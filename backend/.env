# ==================== 基础配置 ====================
PORT=5000
NODE_ENV=development

# ==================== 文件上传配置 ====================
MAX_FILE_SIZE=10485760         # 10MB in bytes
UPLOAD_DIR=uploads

# ==================== MongoDB 配置 ====================
MONGODB_URI=mongodb://localhost:27017/fileuploader
MONGODB_USER=dev_user
MONGODB_PASSWORD=dev_mongodb_123

# ==================== Redis 配置 ====================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
#REDIS_PASSWORD=dev_redis_123
REDIS_CONNECT_TIMEOUT=10000
REDIS_RETRY_ATTEMPTS=3

# ==================== 加密配置 ====================
ENCRYPTION_KEY=dev_encryption_key_1234567890123456
ENCRYPTION_ALGORITHM=aes-256-cbc

# ==================== 会话配置 ====================
SESSION_SECRET=dev_session_secret_123456789
SESSION_MAX_AGE=86400000

# ==================== 安全配置 ====================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HTTPS=false
CORS_ORIGIN=http://localhost:3000

# ==================== 日志配置 ====================
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
ENABLE_REQUEST_LOGGING=true

# ==================== DeepSeek API 配置 ====================
DEEPSEEK_API_KEY=sk-bbee0ce8f9e74e47accaca1d0d4b2896
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# ==================== 摘要配置 ====================
SUMMARY_MAX_LENGTH=300

# ==================== 缓存配置 ====================
CACHE_TTL=3600
ENABLE_CACHE=true

# ==================== 文件类型限制 ====================
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# ==================== 错误处理配置 ====================
SHOW_DETAILED_ERRORS=true
ERROR_LOG_LEVEL=error

# ==================== 性能配置 ====================
COMPRESSION_LEVEL=6
ENABLE_COMPRESSION=true
MAX_CONCURRENT_REQUESTS=100

# ==================== 监控配置 ====================
ENABLE_MONITORING=true
MONITORING_RETENTION_DAYS=30
ENABLE_HEALTH_CHECK=true